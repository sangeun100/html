<meta charset="UTF-8">
<style>
#map {
	width: 100%;
	height: 500px;
	border: 2px solid red;
	bottom: 10px;
}

h1 {
	font-family: 'Poor Story', cursive;
}

button {
	font-family: 'Poor Story', cursive;
}
</style>
<script>
	$(document).ready(function() {
						var mapContainer = document.getElementById('map');
						var mapOption = {
							center : new kakao.maps.LatLng(37.5666805,126.9784147),
							level : 5
						};

						var map = new kakao.maps.Map(mapContainer, mapOption);
						var mapTypeControl = new kakao.maps.MapTypeControl();
						map.addControl(mapTypeControl,
								kakao.maps.ControlPosition.TOPRIGHT);
						var zoomControl = new kakao.maps.ZoomControl();
						map.addControl(zoomControl,
								kakao.maps.ControlPosition.RIGHT);

						var markerPosition = new kakao.maps.LatLng(37.5666805,
								126.9784147);
						var marker = new kakao.maps.Marker({
							position : markerPosition
						});
						marker.setMap(map); 

						var iwContent = '<div style="padding:5px;">Hello World! <br><a href="https://map.kakao.com/link/map/Hello World!,33.450701,126.570667" style="color:blue" target="_blank">큰지도보기</a> <a href="https://map.kakao.com/link/to/Hello World!,33.450701,126.570667" style="color:blue" target="_blank">길찾기</a></div>', // 인포윈도우에 표출될 내용으로 HTML 문자열이나 document element가 가능합니다
						iwPosition = new kakao.maps.LatLng(37.5666805,
								126.9784147);
						var infowindow = new kakao.maps.InfoWindow({
							position : iwPosition,
							content : iwContent
						});
						infowindow.open(map, marker); 

						$('#go1').click(
								function name() {
									var moveLatLon = new kakao.maps.LatLng(37.5540054,126.9294881);
									var markerPosition  = new kakao.maps.LatLng(37.5540054,126.9294881);
									var marker = new kakao.maps.Marker({
										position : markerPosition
									}); 
									map.setCenter(moveLatLon);
									marker.setMap(map);
								});
						$('#go2').click(
								function name() {
									var moveLatLon = new kakao.maps.LatLng(37.5833819,127.0001938);
									var markerPosition  = new kakao.maps.LatLng(37.5833819,127.0001938);
									var marker = new kakao.maps.Marker({
										position : markerPosition
									});
									map.panTo(moveLatLon);
									marker.setMap(map);
								});
						$('#go3').click(
								function name() {
									var moveLatLon = new kakao.maps.LatLng(37.6894541,126.8549178);
									var markerPosition  = new kakao.maps.LatLng(37.6894541,126.8549178);
									var marker = new kakao.maps.Marker({
										position : markerPosition
									});
									map.panTo(moveLatLon);
									marker.setMap(map);
								});

					}); 
</script>

<h1>라쿤을 볼 수 있는 곳</h1>
<button id="go1">홍대테이블에이</button>
<button id="go2">대학로라쿤카페</button>
<button id="go3">테마파크쥬쥬</button>
<div id="map"></div>



