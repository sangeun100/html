<meta charset="UTF-8">
<style>
	#result{
		width: 500px;
		border: 2px solid blue;
	};
</style>

<script>
//jquery 는 함수로 들어가야 함 ->val();
function display(data) {
	var txt = '<h2>'+data+'</h2>';
	$('#result').html(txt); //html 내용이 들어가야해서 txt로 쓰면 안됌
}; 
function getdata(txt) {
	$.ajax({
		url:'search', //서버의 search라는 프로그램에 데이터를 입력한 값으로 전송하겠따
		data:{'s':txt},
		success:function(data){
			display(data);
		}
	});
};

$(document).ready(function () {
	$('button').click(function () {
		var txt = $('#txt').val();
		getdata(txt);
	}); //화면이 준비가 되면(ready) 버튼에 클릭이라는 이벤트 붙여놓음 
});
</script>

<h1>AJ02 Main</h1>
<input type="text" id="txt"><!--  사용자가 입력할 수 있는 공간 -->
<button>등급확인</button>
<div id="result"></div>